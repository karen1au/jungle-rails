<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

<!--review form !-->
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [ @product, @product.reviews.build ] do |form| %>


        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :rating %>
          <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), { include_blank: true }, class: 'form-control' %>
        </div>

        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>

<!--all reviews !-->
        <div class="col-sm-8">
        <h3>Reviews</h3>
          <% @reviews.each do |r| %>
        <div style="border: 1px solid black; margin-bottom: 1em">
            <h5><%= User.find(r.user_id).first_name%></h5>
            <p><%= r.description %></p>
            <h5>Rating: <%= r.rating %></h5>
        </div>
            <% end %>
        </div>



      </div>
    </div>
  </article>

</section>
