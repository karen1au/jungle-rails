<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

<!--review form !-->
    <div class="col-sm-6 col-sm-offset-1">
      <h3>Reviews</h3>
      <div class="review-form">
      <%= form_for [ @product, @product.reviews.build ] do |form| %>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :rating %>
          <%= form.select :rating, 
                          options_for_select([1, 2, 3, 4, 5]),
                          { include_blank: true }, 
                          class: 'form-control' %>
        </div>
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>
      </div>
<!--all reviews !-->
      <div class="review-list">
          <% @reviews.each do |r| %>
          <div class="reviews-container">
            <span><%= User.find(r.user_id).first_name%> <%= User.find(r.user_id).last_name%></span>
            <span class="rating">
            <% (r.rating).times do%>
            <%=fa_icon "star"%>
            <% end %>
            </span>
            <% if User.find(r.user_id) == current_user %>
            <%= link_to 'Delete', [r.product, r], method: :delete, class: 'btn btn-danger btn-sm delete-btn' %>
            <% end %>
            <p class="description"><%= r.description %></p>
          </div>
          <% end %>
      </div>
        </div>
    </div>
  </article>

</section>
